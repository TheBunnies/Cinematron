@model DashboardViewModel
@{
    ViewData["Title"] = $"{User.Identity.Name}'s profile";
}
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body bg-dark">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="@Model.AvatarUrl" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4 class="text-white">@Model.Username</h4>
                                <p class="text-secondary mb-1">The user of Cinematron</p>
                                <br>
                                <br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body bg-dark">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0 text-white">Username</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Username
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0 text-white">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>